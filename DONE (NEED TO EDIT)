void option()
{
		int option;
		cout<<"****************************** OPTION MENU ******************************"<<endl;
		cout<<"Press [1]	Enter another Customer"<<endl;
		cout<<"Press [2]	Log-out"<<endl;
		cin>>option;
		if(option==1)
		{
			menu();	
		}else
			exit(1);			
}
