void details::user()		//oop login account
{
	int a,i;
	cashier user;
	cout<<" 					********** FIT TO SHOES ********** "<<endl;
	cout<<"Store that apt to fit your shoes :)"<<endl<<endl;
	cout<<"Welcome"<<endl;
	a:int c=0;
	char pass[6];
 	char r[6] = {'p','a','s','s','w','d'};
 	int p;
 	cout<<"Password: ";
 	for (int i=0;i<6;i++)
 	{
 		 pass[i] = getch();
  		cout<<"*";
 	}
 	for (int j=0;j<6;j++)
 	{
    	if (pass[j] == r[j])
    	c = c+1;
 	 }

	if (c != 6)
	{
		cout<<"\nInvalid Password"<<endl;
		goto a;
	}else(c==6);{ 
		cout<<"\nCorrect Password"<<endl;
	}
}

